@model IEnumerable<PartyManagement.Web.Models.PartyViewModel>

@{
    ViewData["Title"] = "Parties";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Add Party</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Image</th>
            <th>Location</th>
            <th>Organizer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date?.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Party Image" style="width:100px; height:auto;" />
                    }
                </td>
                <td>@item.LocationName</td>
                <td>@item.OrganizerName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this party?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>