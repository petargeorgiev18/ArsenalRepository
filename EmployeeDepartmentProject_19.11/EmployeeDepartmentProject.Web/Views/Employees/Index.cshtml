@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add Employee</a>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Salary</td>
                <td>@emp.Department?.Name</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>