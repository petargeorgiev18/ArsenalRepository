@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>
<a class="btn btn-success mb-3" asp-action="Create">Add Department</a>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.Code</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@dept.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@dept.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
